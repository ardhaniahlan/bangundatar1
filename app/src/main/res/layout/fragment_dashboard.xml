<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.DashboardFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bangun_datar"
        android:gravity="center"
        android:padding="20sp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="#E9EFC0"
        android:textColor="#4E944F"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E9EFC0"
        >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15sp"
            android:rowCount="5"
            android:columnCount="1"
            >

        <Button
            android:id="@+id/lingkaran"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:text="@string/lingkaran"
            android:layout_margin="5sp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="#4E944F"
            />

<!--        <Button-->
<!--            android:layout_height="100dp"-->
<!--            android:layout_columnWeight="1"-->
<!--            android:layout_margin="5sp"-->
<!--            android:text="@string/persegi"-->
<!--            android:textSize="20sp"-->
<!--            android:textStyle="bold"-->
<!--            android:backgroundTint="#4E944F"-->
<!--            />-->
        </GridLayout>

    </LinearLayout>

</LinearLayout>